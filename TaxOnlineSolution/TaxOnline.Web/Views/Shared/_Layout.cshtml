    <!--[if lt IE 9]><p class="error" style="clear:both;">'Breeze + Angular' requires browser support for defined properties.</p><![endif]-->

    <div id="body" data-ng-controller="BaseController">


        @if (@User.Identity.IsAuthenticated)
        { 

            
            <!-- NAVBAR
    ================================================== -->
            <div class="navbar-wrapper">
                <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
                <div class="container" id="menucontainer">
                    <div id="userSettings" class="pull-right">
                        @Html.Partial("_UserSettings")
                    </div>
                    <div class="navbar navbar-inverse">
                        <div class="navbar-inner">
                            <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
                            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="brand" href="#">Property Tax Online</a>
                            <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
                            <div class="nav-collapse collapse">
                                <ul class="nav">
                                    <li data-ng-repeat="menu in menus"
                                        class="{{menu.classname}}">
                                        <a href="{{menu.href}}" data-ng-click="menuclick($index)">{{menu.name}}
                          <b class="caret" style="border-top: 4px solid #FAECEC; vertical-align: initial" data-ng-show="menu.submenus.length > 0"></b></a>
                                        <div data-ng-show="menu.submenuvisible">
                                            <ul class="mydropdown" data-ng-repeat="submenu in menu.submenus">
                                                <li><a href="{{submenu.href}}">{{submenu.name}}</a></li>
                                            </ul>
                                        </div>
                                    </li>


                                </ul>
                            </div>
                            <!--/.nav-collapse -->
                        </div>
                        <!-- /.navbar-inner -->
                    </div>
                    <!-- /.navbar -->

                </div>
                <!-- /.container -->
            </div>
            <!-- /.navbar-wrapper -->
@*
            
             
